# Open document in fit-width mode by default
set adjust-open width

set window-title-basename "true"
set selection-clipboard "clipboard"

set recolor false
set recolor-keephue true

set notification-error-bg       "#1f1e1d" # bg
set notification-error-fg       "#ec6b62" # bright:red
set notification-warning-bg     "#1f1e1d" # bg
set notification-warning-fg     "#fabd2f" # bright:yellow
set notification-bg             "#1f1e1d" # bg
set notification-fg             "#a9b665" # bright:green

set completion-bg               "#32302f" # bg2
set completion-fg               "#ebdbb2" # fg
set completion-group-bg         "#3c3836" # bg1
set completion-group-fg         "#928374" # gray
set completion-highlight-bg     "#6f8faf" # bright:blue
set completion-highlight-fg     "#32302f" # bg2

# Define the color in index mode
set index-bg                    "#32302f" # bg2
set index-fg                    "#ebdbb2" # fg
set index-active-bg             "#6f8faf" # bright:blue
set index-active-fg             "#32302f" # bg2

set inputbar-bg                 "#1f1e1d" # bg
set inputbar-fg                 "#ebdbb2" # fg

set statusbar-bg                "#32302f" # bg2
set statusbar-fg                "#ebdbb2" # fg

set highlight-color             "#fabd2f" # bright:yellow
set highlight-active-color      "#fe8019" # bright:orange

set default-bg                  "#1f1e1d" # bg
set default-fg                  "#ebdbb2" # fg
set render-loading              true
set render-loading-bg           "#1f1e1d" # bg
set render-loading-fg           "#ebdbb2" # fg

# Recolor book content's color
set recolor-lightcolor          "#1f1e1d" # bg
set recolor-darkcolor           "#ebdbb2" # fg
# set recolor                     "true"
# set recolor-keephue             true      # keep original color

set scroll-step 50

set font "Ubuntu Nerd Font 12"
set synctex true
set synctex-editor-command "nvr --remote-silent +%{line} %{input}"
